<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
  <ul class="list-unstyled">
       <div class="row center">
           <div class="col-md-4 col-md-offset-4">
             <li>Created By</li>
           <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
           <li class="article-title">
             <%= link_to @article.user.username, user_path(@article.user) %>
           </li>
           <li><small>
             <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
          </small></li>
          
           </div>
       </div>
  </ul>
   
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr> 
 
  <%= simple_format(@article.description) %>
  
  <div class="article-actions">
      
      <% if logged_in? && current_user == @article.user %>
      
  
        <%= link_to "Edit this fucking article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 

        <%= link_to "Delete this fucking article", article_path(@article), method: :delete, 
                                          data: { confirm: "Are you fucking sure about deleting this shitty article?"},
                                          class: "btn btn-xs btn-danger" %>
      <% end %>
        <%= link_to "View all fucking articles", articles_path, class: "btn btn-xs btn btn-success" %>

</div>
</div>