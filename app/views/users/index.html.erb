<h1 align="center">All Fucking Alpha Bloggers</h1>
<div align="center">
 <%= will_paginate %>
 <% @users.each do |user| %>
   <ul class="list-unstyled">
       <div class="row">
           <div class="well col-md-4 col-md-offset-4">
           <li><%= link_to gravatar_for(user), user_path(user) %></li>
           <li class="article-title">
             <%= link_to user.username, user_path(user) %>
           </li>
           <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
           <% if logged_in? and current_user.admin? %>
             <li><%= link_to "Delete This Fucking Idiot", user_path(user), method: :delete,
                data: { confirm: "Are You Sure About Deleting This Fucking Idiot" } %></li>
           <% end %>     
           </div>
       </div>
   </ul>

<% end %>
 <%= will_paginate %>
</div>